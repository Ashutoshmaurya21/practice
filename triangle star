#include<iostream>
using namespace std;
int main()
{
    int n=10; // intialises the ten line for star..
    for(int i=0;i<n;i++) // on first loops travel vertical 
    {
        for(int j=0;j<2*n;j++)// and second one travel horizontal -
        if(j<n-i || j>n+i)//check condition 
        cout<<" ";
        else
        cout<<"*";
        cout<<"\n";

    }

}
